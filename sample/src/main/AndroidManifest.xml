<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.claudiodegio.sample.msv">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MatSearchViewActivity"
            android:label="Msv Simple"
            android:theme="@style/AppTheme.NoActionBarColored"/>

        <activity android:name=".MatSearchViewSuggestionActivity"
            android:label="Msv Suggestion"
            android:theme="@style/AppTheme.NoActionBarColored"/>

        <activity android:name=".MatSearchViewFilterActivity"
            android:label="Msv Filter"
            android:theme="@style/AppTheme.NoActionBarColored"/>

        <activity android:name=".ThemedMatSearchViewActivity"
            android:label="Msv Themed"
            android:theme="@style/AppTheme.NoActionBarColored"/>
    </application>

</manifest>
